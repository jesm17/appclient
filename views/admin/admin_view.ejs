<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="style/main.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css"
    />
    <%- include('../layouts/headers.ejs') %> <%- include('../layouts/nav.ejs')
    %>
    <script
    src="https://code.jquery.com/jquery-3.6.3.js"
    integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"
  ></script>
  </head>

  <body>
    <div class="table-responsive">
      <main class="form-signin w-75 m-auto">
        <button
          type="button"
          class="btn btn-success mb-4"
          data-bs-toggle="modal"
          data-bs-target="#adminAdd"
        >
          Agregar nuevo administrador <i class="bi bi-person-add"></i>
        </button>
        <table class="table table-hover align-middle border" id="adminTable">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Foto</th>

              <th scope="col">Nombre de usuario</th>
              <th scope="col">Email</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody class="justify-content-center">
            <% admins.forEach(function(admin){ %>
            <tr>
              <th scope="row"><%= admin.id %></th>
              <td>
                <img src="<%= admin.image? admin.image :
                "image/defaultAvatar.jpg " %> " id="avatar" alt="" srcset="">
              </td>

              <td><%= admin.username %></td>
              <td><%= admin.email %></td>
              <td class="">
                <button
                  class="btn admin-delete border border-1 ms-2 m-2 border-danger"
                  value="<%= admin.id %>"
                  name="admin-delete"
                >
                  <i class="bi bi-trash"></i>
                </button>
                <button
                  class="btn admin-update border border-1 ms-2 me-2 border-primary"
                  value="<%= admin.id %>"
                  name="admin-update"
                  data-bs-toggle="modal"
                  data-bs-target="#updateAdmin-modal"
                >
                  <i class="bi bi-pencil"></i>
                </button>
              </td>
            </tr>

            <% }); %>
          </tbody>
        </table>
      </main>
    </div>

    <!-- registrar nuevo admin modal -->
    <div
      class="modal fade"
      id="adminAdd"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Registrar nuevo administrador
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              class="newAdmin"
              id="newAdmin"
              enctype="multipart/form-data"
              novalidate
            >
              <div class="col-sm-12 messages" id="messages"></div>
              <div class="form-floating mt-1">
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  placeholder="Username"
                  required
                />
                <label for="floatingInput"
                  >Nombre de usuario <i class="bi bi-person"></i
                ></label>
              </div>

              <div class="form-floating mt-1">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="name@example.com"
                  required
                />
                <label for="floatingInput"
                  >Correo electronico <i class="bi bi-envelope-at"></i
                ></label>
              </div>
              <div class="form-floating mt-1">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Password"
                  required
                />
                <label for="floatingPassword"
                  >Contraseña <i class="bi bi-key"></i
                ></label>
              </div>

              <div class="mt-1">
                <input
                  multiple
                  type="file"
                  class="form-control"
                  name="file"
                  id="file"
                />
              </div>

              <input type="hidden" value="admin" name="rol" id="rol" />
              <div class="modal-footer">
                <button
                  class="btn btn-success my-2"
                  type="button"
                  id="addAdmin"
                >
                  Registrar <i class="bi bi-person-add"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-danger"
                  data-bs-dismiss="modal"
                >
                  Cancelar <i class="bi bi-close"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- actualizar admin modal -->
    <div
      class="modal fade"
      id="updateAdmin-modal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Actualizar administrador
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>

          <div class="modal-body">
            <div class="alert alert-warning">
              Si no desea actualizar la imagen o contraseña por favor dejelos
              vacios
            </div>
            <div id="updateform"></div>
            <div class="modal-footer">
              <button
                class="btn btn-success my-2"
                type="button"
                id="updateAdmin"
                name="updateAdmin"
              >
                Actualizar <i class="bi bi-arrow-repeat"></i>
              </button>
              <button
                type="button"
                class="btn btn-danger"
                data-bs-dismiss="modal"
              >
                Cancelar <i class="bi bi-close"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<script
      type="text/javascript"
      charset="utf8"
      src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"
    ></script>
<script>
  $(document).ready(function () {
    $('#adminTable').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json',
      },
    });
  });
</script>

<script src="js/deleteAdmin.js" type="text/javascript"></script>
<script src="js/updateAdmin.js" type="text/javascript"></script>
<script src="js/addAdmin.js" type="text/javascript"></script>
