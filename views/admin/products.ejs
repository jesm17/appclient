<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css"
    />
    <link rel="stylesheet" href="../style/main.css" />
    <%- include('../layouts/headers.ejs') %>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <%- include('../layouts/nav.ejs') %>
    <div class="table-responsive">
      <main class="form-signin w-75 m-auto">
        <button
          type="button"
          class="btn btn-success mb-4"
          data-bs-toggle="modal"
          data-bs-target="#productAdd"
        >
          Agregar nuevo producto <i class="bi bi-person-add"></i>
        </button>
        <table class="table table-hover align-middle border" id="productsTable">
          <thead>
            <tr>
              <th scope="col">Id</th>

              <th scope="col">Nombre</th>
              <th scope="col">Descripcion</th>
              <th scope="col">Precio</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody class="justify-content-center">
            <% productos.forEach(function (producto){ %>
            <tr>
              <th scope="row"><%= producto.id %></th>

              <td><%= producto.nombre %></td>
              <td><%= producto.descripcion %></td>
              <td class="cost <%= producto.id %>" id="<%= producto.id %>">
                <%= producto.precio %>
              </td>
              <td class="">
                <button
                  class="btn product-delete border border-1 ms-2 m-2 border-danger"
                  name="product-delete"
                  id="product-delete"
                  value="<%= producto.id %>"
                >
                  <i class="bi bi-trash"></i>
                </button>
                <button
                  class="btn product-update border border-1 ms-2 me-2 border-primary"
                  name="product-update"
                  data-bs-toggle="modal"
                  data-bs-target="#updateProduct-modal"
                  value="<%= producto.id %>"
                >
                  <i class="bi bi-pencil"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </main>
    </div>
  </body>
  <div
    class="modal fade"
    id="productAdd"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">
            Registrar nuevo producto
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form
            class="newProduct"
            id="newProduct"
            enctype="multipart/form-data"
            novalidate
          >
            <div class="col-sm-12 messages" id="messages"></div>
            <div class="form-floating mt-1">
              <input
                type="text"
                class="form-control"
                id="nombre"
                name="nombre"
                placeholder="Cafe"
                required
              />
              <label for="floatingInput"
                >Nombre del producto <i class="fa-solid fa-xmarks-lines"></i
              ></label>
            </div>

            <div class="form-floating mt-1">
              <input
                type="text"
                class="form-control"
                id="descripcion"
                name="descripcion"
                placeholder="Cafe descafeinado"
                required
              />
              <label for="floatingInput"
                >Descripcion <i class="bi bi-card-text"></i
              ></label>
            </div>
            <div class="form-floating mt-1">
              <input
                type="number"
                class="form-control"
                id="precio"
                name="precio"
                placeholder="2000"
                step="2"
                required
              />
              <label for="floatingPassword"
                >Precio <i class="bi bi-currency-dollar"></i
              ></label>
            </div>
            <div class="modal-footer">
              <button
                class="btn btn-success my-2"
                type="button"
                id="addProduct"
              >
                Registrar <i class="bi bi-person-add"></i>
              </button>
              <button
                type="button"
                class="btn btn-danger"
                data-bs-dismiss="modal"
              >
                Cancelar <i class="bi bi-close"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div
    class="modal fade"
    id="updateProduct-modal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">
            Actualizar producto
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form >
            <div id="body-modal">
             
            </div>
             <div class="modal-footer">
                <button
                  class="btn btn-success my-2"
                  type="button"
                  id="productUpdate"
                >
                  Actualizar <i class="bi bi-person-add"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-danger"
                  data-bs-dismiss="modal"
                >
                  Cancelar <i class="bi bi-close"></i>
                </button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</html>
<script
  src="https://code.jquery.com/jquery-3.6.3.js"
  integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
  crossorigin="anonymous"
></script>
<script
  type="text/javascript"
  charset="utf8"
  src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"
></script>
<script>
  $(document).ready(function () {
    $('#productsTable').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json',
      },
    });
  });
</script>

<script src="../../js/producto/addProducto.js"></script>
<script src="../../js/producto/deleteProducto.js"></script>
